  "compilerOptions": {
    "target": "es2015",
    "module": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}